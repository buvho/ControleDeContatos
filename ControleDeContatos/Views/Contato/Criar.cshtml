@model ContatoModel

@{
    ViewData["Title"] = "Criar contato";
}

<h1 class="display-4">Cadastrar contato</h1>


<form aso-controller="Contato" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Insira o Nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Insira o Email">
         @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Insira o Numero de Celular">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" role="button" asp-controller="Contato" asp-action="Index">voltar</a>
</form>